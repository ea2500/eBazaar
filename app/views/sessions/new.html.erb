
<h2>Please log in </h2>

<%= form_tag do %>
		<p>
			<%= label_tag :email, 'Email' %> <br />
			<%= email_field_tag :email, params[:email] %>
		</p>
		<p>
			<%= label_tag :password, 'Password' %>
			<%= link_to "(Forgot your password?)", new_password_reset_path %> <br />
			<%= password_field_tag :password, params[:password] %>
		</p>
		<%= check_box_tag :remember_me, params[:remember_me] %>
	    <%= label_tag :remember_me, "remember me on this computer" %> 
		<p>
			<%= submit_tag "Login" %>
		</p>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<p>Did not recieve account activation email? <%= link_to "Try here again", new_account_activation_path %></p>

<% @us.each do |user| %>
	<%= link_to  user.email+" "+user.id.to_s+'  | '+user.products.count.to_s, 
						login_url(email: user.email, password: "xxxxxx") %> <br>
<% end %>
