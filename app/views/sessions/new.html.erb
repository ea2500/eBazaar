
<h2>Please log in </h2>

<%= form_tag do %>
		<p>
			<%= label_tag :email, 'Email' %> <br />
			<%= email_field_tag :email, params[:email] %>
		</p>
		<p>
			<%= label_tag :password, 'Password' %> <br />
			<%= password_field_tag :password, params[:password] %>
		</p>
		<%= check_box_tag :remember_me, params[:remember_me] %>
	    <%= label_tag :remember_me, "remember me on this computer" %> 
		<p>
			<%= submit_tag "Login" %>
		</p>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>



<% @us.each do |user| %>
	<%= link_to 
			user.email+" "+user.id.to_s+'  | '+user.products.count.to_s, 
						login_url(email: user.email, password: "xxxxxx") %>
<% end %>
