<h1>Activate Account</h1>

<%= form_tag  account_activations_path do %>
		<p>
			<%= label_tag :email, 'Email' %> <br />
			<%= email_field_tag :email, params[:email] %>
		</p>
		
		<p>
			<%= submit_tag "Submit" %>
		</p>

		<p>
			New user? <%= link_to "Sign up", signup_url %>
		</p>
		
<% end %>




